<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- Transparent rectanche to set the size of the drawable -->
    <item>
        <shape android:shape="rectangle" >
            <solid
        		android:color="@android:color/transparent" />
            <size
        		android:width="@dimen/radio_size"
        		android:height="@dimen/radio_size" />
        </shape>
    </item>
    
    <!-- Background colored fill -->
    <item android:drawable="@drawable/circle_pressed"/>
    
    <!-- reuse the off drawable -->
	<item android:drawable="@drawable/btn_radio_off_light" />
    
</layer-list>