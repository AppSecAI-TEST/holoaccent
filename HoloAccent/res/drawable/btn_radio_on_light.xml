<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- glow around -->
    <item>
        <shape android:shape="ring"
            android:innerRadius="@dimen/radio_glow_inner_radius"
            android:thickness="@dimen/radio_glow_thickness"
            android:useLevel="false" >
        <gradient
            android:type="radial"
            android:gradientRadius="@dimen/radio_glow_gradient_radius"
            android:startColor="@color/key_pressed_dimmed"
            android:endColor="#0000" />
        </shape>
    </item>
    
    <!-- inner background -->
    <item
        android:top="@dimen/radio_center_margin"
        android:right="@dimen/radio_center_margin"
        android:bottom="@dimen/radio_center_margin"
        android:left="@dimen/radio_center_margin">
        <shape android:shape="oval" >
            <stroke android:color="#9000" android:width="0.01dp"/>
            <solid android:color="@color/key" />
        </shape>
    </item>
    
    <!-- inner glow -->
    <item
        android:top="@dimen/radio_center_glow_margin_light"
        android:right="@dimen/radio_center_glow_margin_light"
        android:bottom="@dimen/radio_center_glow_margin_light"
        android:left="@dimen/radio_center_glow_margin_light">
        <shape android:shape="ring"
            android:useLevel="false"
            android:innerRadiusRatio="2" >
	        <gradient
	            android:type="linear"
	            android:angle="270"
	            android:useLevel="false"
	            android:startColor="#afff"
	            android:centerColor="#0000"
	            android:endColor="#0000" />
        </shape>
    </item>
    
    <!-- reuse the off drawable -->
	<item android:drawable="@drawable/btn_radio_off_light" />
    
</layer-list>