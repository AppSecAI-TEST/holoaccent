<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
    <!-- Default themes -->
    <style name="Theme.HoloAccent" parent="android:Theme.Holo">
        <item name="accentColor">@color/key</item>
        
        <item name="android:actionBarStyle">@style/HoloAccent.ActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_item_background</item>
        
        <item name="android:editTextBackground">@drawable/textfield</item>
        
        <item name="android:buttonStyle">@style/HoloAccent.Button</item>
        <item name="android:buttonStyleSmall">@style/HoloAccent.Button.Small</item>
        <item name="android:imageButtonStyle">@style/HoloAccent.ImageButton</item>
        <item name="coloredButtonBackground">@drawable/btn_default_colored</item>
        
        <item name="android:buttonStyleToggle">@style/Widget.HoloAccent.Button.Toggle</item>
        
    	<item name="android:dropDownSpinnerStyle">@style/HoloAccent.Spinner</item>
    	<item name="android:actionDropDownStyle">@style/HoloAccent.Spinner</item>
        
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        
    	<item name="android:progressBarStyleHorizontal">@style/HoloAccent.ProgressBar.Horizontal</item>
    	<item name="android:seekBarStyle">@style/HoloAccent.SeekBar</item>
        
        <item name="android:actionBarWidgetTheme">@style/Theme.HoloAccent</item>
        <item name="android:dialogTheme">@style/BaseDialogTheme</item>
        <item name="android:alertDialogTheme">@style/BaseDialogTheme.Alert</item>
    </style>
    
    <style name="Theme.HoloAccent.Light" parent="android:Theme.Holo.Light">
        <item name="accentColor">@color/key</item>
        
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle.Light</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_light</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_item_background</item>
        
        <item name="android:editTextBackground">@drawable/textfield_light</item>
        
        <item name="android:buttonStyle">@style/HoloAccent.Light.Button</item>
        <item name="android:buttonStyleSmall">@style/HoloAccent.Light.Button.Small</item>
        <item name="android:imageButtonStyle">@style/HoloAccent.Light.ImageButton</item>
        <item name="coloredButtonBackground">@drawable/btn_default_colored</item>
        
        <item name="android:buttonStyleToggle">@style/Widget.HoloAccent.Light.Button.Toggle</item>
        
    	<item name="android:dropDownSpinnerStyle">@style/HoloAccent.Spinner.Light</item>
    	<item name="android:actionDropDownStyle">@style/HoloAccent.Spinner.Light</item>
        
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_light</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_light</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        
    	<item name="android:progressBarStyleHorizontal">@style/HoloAccent.Light.ProgressBar.Horizontal</item>
    	<item name="android:seekBarStyle">@style/HoloAccent.SeekBar.Light</item>
        
        <item name="android:actionBarWidgetTheme">@style/Theme.HoloAccent.Light</item>
        <item name="android:dialogTheme">@style/BaseDialogTheme.Light</item>
        <item name="android:alertDialogTheme">@style/BaseDialogTheme.Light.Alert</item>
    </style>
    
    <style name="Theme.HoloAccent.Light.DarkActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="accentColor">@color/key</item>
        
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle.Light.DarkActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_item_background</item>
        
        <item name="android:editTextBackground">@drawable/textfield_light</item>
        
        <item name="android:buttonStyle">@style/HoloAccent.Button</item>
        <item name="android:buttonStyleSmall">@style/HoloAccent.Button.Small</item>
        <item name="android:imageButtonStyle">@style/HoloAccent.ImageButton</item>
        <item name="coloredButtonBackground">@drawable/btn_default_colored</item>
        
        <item name="android:buttonStyleToggle">@style/Widget.HoloAccent.Light.Button.Toggle</item>
        
    	<item name="android:dropDownSpinnerStyle">@style/HoloAccent.Spinner.Light</item>
    	<item name="android:actionDropDownStyle">@style/HoloAccent.Spinner</item>
        
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_light</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_light</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        
    	<item name="android:progressBarStyleHorizontal">@style/HoloAccent.Light.ProgressBar.Horizontal</item>
    	<item name="android:seekBarStyle">@style/HoloAccent.SeekBar.Light</item>
        
        <item name="android:actionBarWidgetTheme">@style/Theme.HoloAccent</item>
        <item name="android:dialogTheme">@style/BaseDialogTheme.Light</item>
        <item name="android:alertDialogTheme">@style/BaseDialogTheme.Light.Alert</item>
        
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.HoloAccent</item>
    </style>
    
    <!-- 
    	Base dialog themes, they are referenced from attributes in other thems. 
    	DON'T use them as themes for your activityes. Use 'Theme.HoloAccent.Dialog' 
    	and 'Theme.HoloAccent.Light.Dialog' instead
     -->
    <!-- @hide -->
    <style name="BaseDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:actionBarStyle">@style/HoloAccent.ActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_item_background</item>
        
        <item name="android:editTextBackground">@drawable/textfield</item>
        
        <item name="android:buttonStyle">@style/HoloAccent.Button</item>
        <item name="android:buttonStyleSmall">@style/HoloAccent.Button.Small</item>
        <item name="android:imageButtonStyle">@style/HoloAccent.ImageButton</item>
        <item name="coloredButtonBackground">@drawable/btn_default_colored</item>
        
    	<item name="android:dropDownSpinnerStyle">@style/HoloAccent.Spinner</item>
    	<item name="android:actionDropDownStyle">@style/HoloAccent.Spinner</item>
        
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        
    	<item name="android:progressBarStyleHorizontal">@style/HoloAccent.ProgressBar.Horizontal</item>
    	<item name="android:seekBarStyle">@style/HoloAccent.SeekBar</item>
        
        <item name="android:actionBarWidgetTheme">@style/Theme.HoloAccent</item>
        <item name="android:dialogTheme">@style/BaseDialogTheme</item>
        <item name="android:alertDialogTheme">@style/BaseDialogTheme.Alert</item>
        
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.HoloAccent</item>
    </style>
    <!-- @hide -->
    <style name="BaseDialogTheme.Light" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle.Light</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_light</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_item_background</item>
        
        <item name="android:editTextBackground">@drawable/textfield_light</item>
        
        <item name="android:buttonStyle">@style/HoloAccent.Light.Button</item>
        <item name="android:buttonStyleSmall">@style/HoloAccent.Light.Button.Small</item>
        <item name="android:imageButtonStyle">@style/HoloAccent.Light.ImageButton</item>
        <item name="coloredButtonBackground">@drawable/btn_default_colored</item>
        
    	<item name="android:dropDownSpinnerStyle">@style/HoloAccent.Spinner.Light</item>
    	<item name="android:actionDropDownStyle">@style/HoloAccent.Spinner.Light</item>
        
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_light</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_light</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb</item>
        
    	<item name="android:progressBarStyleHorizontal">@style/HoloAccent.Light.ProgressBar.Horizontal</item>
    	<item name="android:seekBarStyle">@style/HoloAccent.SeekBar.Light</item>
        
        <item name="android:actionBarWidgetTheme">@style/Theme.HoloAccent.Light</item>
        <item name="android:dialogTheme">@style/BaseDialogTheme.Light</item>
        <item name="android:alertDialogTheme">@style/BaseDialogTheme.Light.Alert</item>
        
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.HoloAccent</item>
    </style>
    
    <!--
        Dialog themes (attributes copied from Theme.HoloAccent)
    	If you apply the themes to an Activity, you will need to programatically modify 
    	the title divider color. See DividerPainter for more information.
    -->
    <style name="Theme.HoloAccent.Dialog" parent="BaseDialogTheme">
        <item name="accentColor">@color/key</item>
    </style>
    <style name="Theme.HoloAccent.Light.Dialog" parent="BaseDialogTheme.Light">
        <item name="accentColor">@color/key</item>
    </style>
    
    <!-- Extension themes (the parents are HoloAccent themes) -->
    <!-- @hide -->
    <style name="BaseDialogTheme.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.HoloAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
    <!-- @hide -->
    <style name="BaseDialogTheme.Light.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.HoloAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

</resources>
