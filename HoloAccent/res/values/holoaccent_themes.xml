<resources>
	
    <!-- Default themes -->
    <style name="Theme.HoloAccent" parent="android:Theme.Holo">
        <item name="accentColor">@color/key</item>
        
        <item name="android:actionBarStyle">@style/HoloAccent.ActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle.Light.DarkActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_item_background</item>
        
        <item name="android:editTextBackground">@drawable/textfield</item>
        
        <item name="android:buttonStyle">@style/HoloAccent.Button</item>
        <item name="android:buttonStyleSmall">@style/HoloAccent.Button.Small</item>
        <item name="android:imageButtonStyle">@style/HoloAccent.ImageButton</item>
        <item name="coloredButtonBackground">@drawable/btn_default_colored</item>
        
    	<item name="android:dropDownSpinnerStyle">@style/HoloAccent.Spinner</item>
    	<item name="android:actionDropDownStyle">@style/HoloAccent.Spinner</item>
        
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check</item>
        
    	<item name="android:progressBarStyleHorizontal">@style/HoloAccent.ProgressBar.Horizontal</item>
        
        <item name="android:actionBarWidgetTheme">@style/Theme.HoloAccent</item>
        <item name="android:dialogTheme">@style/Theme.HoloAccent.Dialog</item>
        <item name="android:alertDialogTheme">@style/Theme.HoloAccent.Dialog.Alert</item>
    </style>
    
